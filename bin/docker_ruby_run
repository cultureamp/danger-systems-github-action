#!/bin/bash
set -euo pipefail

BUNDLED_WITH=2.1.4
DANGERFILE_CUSTOM_PATH=${DANGERFILE_CUSTOM_PATH:-}

cd ./.danger

if [ -f "Gemfile.lock" ]; then
  BUNDLED_WITH="$(grep 'BUNDLED WITH' -A 1 Gemfile.lock | grep -v BUNDLED | tr -d ' ')"
fi

# Install bundler
gem install bundler --version "$BUNDLED_WITH"

if [ -f "Gemfile" ]; then
  bundle install --jobs=4 --retry=3
fi

# Install danger if it not in the project deps
bundle info danger >/dev/null 2>&1 || {
  gem install danger
}

# Run danger
if [[ -z "$DANGERFILE_CUSTOM_PATH" ]]; then
  danger
else
  echo "::debug::Using custom dangerfile path: $DANGERFILE_CUSTOM_PATH"
  danger --dangerfile="$DANGERFILE_CUSTOM_PATH"
fi;
